<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        html ,body{
             width: 100%;
             height: 100%;

        }
        .container{
            width: 100%;
            height: 100%;
           background-color: rgba(0, 0, 0, 0.787);    
           color: white;        
        }
        .hero{
            padding: 40px;
        }
        .product{
            overflow: hidden;
            border-radius: 10px;
             width: 25vw;
             height: 40vh;
             background-color: white;
             padding: 10px;
             color: black;
        }
        .image{
            width: 100%;
            height: 70%;
            background-color: black;
            border-radius: 10px;
        }
        .hero{
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        img{
            width: 100%;
            height: 100%;
        }
    </style>
  </head>
  <body>
   <div class="container">
     <nav style="display: flex; justify-content:space-between; align-items: center; padding: 20px ;">
       <h1>Simple  Ecomerse Werbsite</h1>
       <a style="padding: 10px; background-color: white; color: black; text-decoration: none; border-radius: 10px;" href="/create">Create Product</a>
     </nav>
       <div class="hero">
          <%  products.forEach((p)=>{  %>
              <div class="product">
              <div class="image">
                  <img src='<%= p.image %>'  alt="image">
              </div>
              <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 20px;" class="price">
                <h2><%= p.name %> </h2>
              <h3><%= p.price %></h3>
              </div>
          </div>
          <% }) %>
       </div>
   </div>
  </body>
</html>
